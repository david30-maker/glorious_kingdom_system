<h1><%= @post.title %></h1>
<p><%= @post.content %></p>
<p><emp>Published on: <%= @post.published_at.strftime("%B %d, %Y") %></emp></p>

<%= link_to 'Back to Posts', posts_path %> | 
<%= link_to 'Edit', edit_post_path(@post) %> | 
<%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' } %>