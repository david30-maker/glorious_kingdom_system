<li>
  <h2><%= post.title %></h2>
  <p><%= post.content %></p>
  <p><em>Published on: <%= post.published_at&.strftime("%B %d, %Y") %></em></p>

<% if post.id.present? %> 
  <%= link_to 'Edit', edit_post_path(post) %> |
  <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

</li>

